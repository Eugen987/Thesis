<Page
    x:Class="ThesisWPF3.View.GraphPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://schemas.panthernet.ru/graphx/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ThesisWPF3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ThesisWPF3.Model"
    Title="GraphPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:ZoomControl x:Name="zoomctrltop" Grid.Row="0">
            <models:GraphAreaExample x:Name="AreaTop" />
        </controls:ZoomControl>
        <controls:ZoomControl x:Name="zoomctrlbutton" Grid.Row="1">
            <models:GraphAreaExample x:Name="AreaButton" />
        </controls:ZoomControl>
    </Grid>
</Page>